
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AcademicYear {
  id          String   @id @default(cuid())
  name        String   @unique // e.g., "2024-25"
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean  @default(false)
  enrollments StudentEnrollment[]
  fees        Fee[]
  attendance  Attendance[]
  certificates Certificate[]
  feeStructures FeeStructure[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Student {
  id          String   @id @default(cuid())
  admissionNo String   @unique
  firstName   String
  lastName    String
  dob         DateTime
  gender      String
  address     String?
  phone       String?
  email       String?  @unique
  parentName  String?
  classId     String
  class       Class    @relation(fields: [classId], references: [id])
  attendance  Attendance[]
  fees        Fee[]
  enrollments StudentEnrollment[]
  certificates Certificate[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StudentEnrollment {
  id              String       @id @default(cuid())
  studentId       String
  student         Student      @relation(fields: [studentId], references: [id])
  classId         String
  class           Class        @relation(fields: [classId], references: [id])
  academicYearId  String
  academicYear    AcademicYear @relation(fields: [academicYearId], references: [id])
  status          String       @default("ACTIVE") // ACTIVE, PROMOTED, TRANSFERRED, WITHDRAWN
  rollNumber      String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@unique([studentId, academicYearId])
}

model Certificate {
  id              String       @id @default(cuid())
  certificateNo   String       @unique
  type            String       // BONAFIDE, STUDY_CERTIFICATE, TRANSFER_CERTIFICATE
  studentId       String
  student         Student      @relation(fields: [studentId], references: [id])
  academicYearId  String
  academicYear    AcademicYear @relation(fields: [academicYearId], references: [id])
  issueDate       DateTime     @default(now())
  purpose         String?      // For bonafide certificates
  remarks         String?
  issuedBy        String?      // Staff name
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model Teacher {
  id         String              @id @default(cuid())
  firstName  String
  lastName   String
  email      String              @unique
  phone      String?
  subject    String?
  classes    Class[]
  salaries   TeacherSalary[]
  attendance TeacherAttendance[]
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
}

model Class {
  id        String    @id @default(cuid())
  name      String
  section   String?   @map("grade")
  teacherId String?
  teacher   Teacher?  @relation(fields: [teacherId], references: [id])
  students  Student[]
  enrollments StudentEnrollment[]
  feeStructures FeeStructure[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Attendance {
  id             String       @id @default(cuid())
  date           DateTime
  status         String       // PRESENT, ABSENT, LATE
  studentId      String
  student        Student      @relation(fields: [studentId], references: [id])
  academicYearId String?
  academicYear   AcademicYear? @relation(fields: [academicYearId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model TeacherAttendance {
  id        String   @id @default(cuid())
  date      DateTime
  status    String   // PRESENT, ABSENT, HALF_DAY, PAID_LEAVE, UNPAID_LEAVE
  
  checkIn   DateTime?
  checkOut  DateTime?
  lateMinutes Int    @default(0)
  isLate    Boolean  @default(false)
  workedHours Float  @default(0)
  
  teacherId String
  teacher   Teacher  @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  remarks   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([teacherId, date])
}


model Fee {
  id             String       @id @default(cuid())
  amount         Float
  paidAmount     Float        @default(0)
  dueDate        DateTime
  type           String       // TUITION, TRANSPORT, etc.
  status         String       // PAID, PENDING, OVERDUE
  studentId      String
  student        Student      @relation(fields: [studentId], references: [id])
  academicYearId String?
  academicYear   AcademicYear? @relation(fields: [academicYearId], references: [id])
  payments       Payment[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Payment {
  id        String   @id @default(cuid())
  receiptNo String   @unique
  amount    Float
  date      DateTime @default(now())
  method    String   // CASH, CARD, ONLINE
  feeId     String
  fee       Fee      @relation(fields: [feeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FeeStructure {
  id             String        @id @default(cuid())
  name           String        // e.g., "Class 1 Annual Fee"
  classId        String?
  class          Class?        @relation(fields: [classId], references: [id])
  academicYearId String?
  academicYear   AcademicYear? @relation(fields: [academicYearId], references: [id])
  
  tuitionFee     Float         @default(0)
  transportFee   Float         @default(0)
  booksFee       Float         @default(0)
  uniformFee     Float         @default(0)
  examFee        Float         @default(0)
  otherFee       Float         @default(0)
  
  totalFee       Float         // Calculated total
  
  installments   Int           @default(1) // Number of installments
  lateFeePerDay  Float         @default(0)
  
  isActive       Boolean       @default(true)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model SchoolSettings {
  id                    String   @id @default(cuid())
  
  // School Info
  schoolName            String   @default("Sprout School")
  address               String?
  phone                 String?
  email                 String?
  website               String?
  
  // Principal Info
  principalName         String?
  principalSignature    String?  // File path
  
  // Branding
  logoUrl               String?
  schoolSeal            String?
  
  // Receipt Settings
  receiptHeader         String?
  receiptFooter         String?
  receiptTerms          String?
  
  // Certificate Settings
  certificateLetterhead String?
  
  // Payroll & Attendance Settings
  lateGracePeriod       Int      @default(15) // minutes
  latePenaltyCount      Int      @default(3)  // 3 late marks = 1 day deduction
  fullDayWorkHours      Float    @default(8)
  halfDayWorkHours      Float    @default(4)
  
  updatedAt             DateTime @updatedAt
  
  @@map("school_settings")
}

model TeacherSalary {
  id            String          @id @default(cuid())
  teacherId     String
  teacher       Teacher         @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  
  basicSalary   Float
  allowances    Float           @default(0)
  deductions    Float           @default(0)
  netSalary     Float
  
  effectiveFrom DateTime
  effectiveTo   DateTime?
  isActive      Boolean         @default(true)
  
  payments      SalaryPayment[]
  
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model SalaryPayment {
  id            String        @id @default(cuid())
  salaryId      String
  salary        TeacherSalary @relation(fields: [salaryId], references: [id], onDelete: Cascade)
  
  month         Int
  year          Int
  
  amount        Float
  leaveDays     Int           @default(0)
  leaveDeduction Float        @default(0)
  finalAmount   Float
  
  status        String        @default("PENDING")
  paymentDate   DateTime?
  paymentMethod String?
  referenceNo   String?
  remarks       String?
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  @@unique([salaryId, month, year])
}

enum Role {
  MANAGEMENT
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
